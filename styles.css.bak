	position:absolute;
	left:-100px;
	top:25%;
	z-index:1;
	width:50%;
}

.four{
	position:absolute;
	top:40%;
	transform:rotate(10deg);
	left:-120px;
	width:100%;
	max-width:200px;
	z-index:1;
	}


.five{
	position:absolute;
	top:-120px;
	right:-100px;
	width:100%;
	max-width:200px;
	transform:rotate(180deg);
	z-index:1;
	}


.six{
	position:absolute;
	width:100%;
	bottom:0;
	left:-100px;
