/* Importing the Anton font (optional, can also be done in HTML) */
@import url('https://fonts.googleapis.com/css2?family=Anton&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap');

*{
	margin:0;
	padding:0;
	box-sizing:border-box;
}
.container {
    width: 100%;
    height: 100vh;
    background-image: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url("one.png");
    background-size: cover; /* Ensures the image covers the entire container */
    background-position: center; /* Centers the background image */
    background-repeat: no-repeat; /* Prevents the image from repeating */
	position:relative;
	overflow:hidden;
	display:flex;
	flex-direction:column;
	justify-content:center;
	align-items:center;
}
.two{
	position:absolute;
	bottom:0;
	width:100%;
	z-index:1;
}

.three{
	position:absolute;
	left:-540px;
	top:1%;
	z-index:1;
	width:50%;
}

.four{
	position:absolute;
	top:40%;
	transform:rotate(10deg);
	left:-120px;
	width:100%;
	max-width:200px;
	z-index:1;
	}


.five{
	position:absolute;
	top:-120px;
	right:-100px;
	width:100%;
	max-width:200px;
	transform:rotate(180deg);
	z-index:1;
	}


.six{
	position:absolute;
	width:100%;
	bottom:0;
	left:-100px;
	max-width:450px;
	z-index:2;
	}
	
.seven{
	position:absolute;
	width:100%;
	max-width:900px;
	bottom:-700px;
	right:-20%;
	}
.logo{
		width:100px;
		position:absolute;
		top:6%;
		left:8%;
		z-index:10;
	}
.eight{
	position:absolute;
	top:20%;
	right:30%;
	cursor:pointer;
	z-index:10;
	
}
.eight img{
	width:100px;
	
	cursor:pointer;
}
.eight h6{
	position:absolute;
	top:50%;
	left:50%;
	transform:translate(-50%,-50%);
	text-decoration:none;
		color:#fff;
	font-family: 'Anton', sans-serif;
	font-size:20px;
	text-transform:uppercase;
	font-weight:100;
	text-align:center;
	line-height:1.1;
	cursor:pointer;
	width:80px;
	letter-spacing:1px;
	margin-left:-1px;
	
}
h2 {
    font-family: 'Inter', sans-serif;
    color: #fff;
}

h1{
	color:#fff;
	font-family: 'Anton', sans-serif;
	font-style:italic;
	font-size:95px;
	transform:rotate(-1deg);
	text-transform:uppercase;
	font-weight:300;
	text-align:center;
	line-height:1.1;
	margin:20px 0;
}

h3 {
    font-family: 'Inter', sans-serif;
    color: #fff;
	font-size:30px;
	z-index:9;
}
.line{
	width:400px;
	height:3px;
	background:#fff;
	margin:10px 0;
	z-index:9;
}

h4{
    font-family: 'Inter', sans-serif;
    color: #fff;
	font-size:20px;
	font-weight:100;
	margin:20px 0;
	z-index:9;
}


h5{
	color:#fff;
	font-family: 'Anton', sans-serif;
	font-size:35px;
	text-transform:uppercase;
	font-weight:300;
	z-index:9;
}



